{
	"exclude": [
		"node_modules",
		"dist",
	],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"allowJs": false,
		"checkJs": false,
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"useDefineForClassFields": true,
		"noErrorTruncation": true,
		"paths": {
			"$lib": [
				"/src/lib"
			]
		}
	}
}